{
  "FileUrlsAndPaths": {
    "CityListFileUrl": "https://bulk.openweathermap.org/sample/city.list.json.gz",
    "CompressedCityListFilePath": "../CitiesService.Api/DownloadedCities/city.list.json.gz",
    "DecompressedCityListFilePath": "../CitiesService.Api/DownloadedCities/city.list.json"
  },
  "ConnectionStrings": {
    "DefaultConnection": "server=sqlserver;Database=CitiesServiceDB;User Id=sa;Encrypt=False;Password=zaq1@WSX",
    "RedisConnection": "redis:6379"
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "CitiesService"
    }
  },
  "RabbitMQSettings": {
    "Host": "rabbitmq://rabbitmq"
  },
  "ApiResourceAuthSettings": {
    "AuthorityUrl": "http://oauthserver:80",
    "Audience": "CitiesApi",
    "RequiredClaims": [
      {
        "ClaimType": "scope",
        "AllowedValues": [
          "CitiesApi"
        ]
      }
    ]
  },
  "ResiliencePipelines": {
    "Default": {
      "Name": "default",
      "MaxRetryAttempts": 3,
      "DelaySeconds": 2,
      "UseJitter": true,
      "TimeoutSeconds": 5
    },
    "Health": {
      "Name": "health",
      "MaxRetryAttempts": 0,
      "DelaySeconds": 0,
      "UseJitter": false,
      "TimeoutSeconds": 2
    }
  }
}
