{
  "FileUrlsAndPaths": {
    "CityListFileUrl": "https://bulk.openweathermap.org/sample/city.list.json.gz",
    "CompressedCityListFilePath": "..\\CitiesService\\DownloadedCities\\city.list.json.gz",
    "DecompressedCityListFilePath": "..\\CitiesService\\DownloadedCities\\city.list.json"
  },
  "ConnectionStrings": {
    "DefaultConnection": "server=sqlserver; Database=CitiesServiceDB; User Id=SA; Password=P@ssword!@#;",
    "RedisConnection": "redis:6379"
  },
  "logger": {
    "applicationName": "hurtownia-danych-cedig-service",
    "excludePaths": [ "/ping", "/metrics" ],
    "level": "warning",
    "console": {
      "enabled": true
    },
    "file": {
      "enabled": false,
      "path": "logs/logs.txt",
      "interval": "day"
    },
    "seq": {
      "enabled": true,
      "url": "http://seq:5341/"
    }
  },
  "rabbitMq": {
    "connectionName": "cities-service",
    "retries": 3,
    "retryInterval": 2,
    "conventionsCasing": "snakeCase",
    "logger": {
      "enabled": true
    },
    "messageProcessor": {
      "enabled": true,
      "type": "distributed",
      "messageExpirySeconds": 300
    },
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [
      "rabbitmq"
    ],
    "requestTimeout": "00:00:10",
    "publishConfirmTimeout": "00:00:10",
    "recoveryInterval": "00:00:10",
    "persistentDeliveryMode": true,
    "autoCloseConnection": true,
    "automaticRecovery": true,
    "topologyRecovery": true,
    "exchange": {
      "declare": true,
      "durable": true,
      "autoDelete": false,
      "type": "topic",
      "name": "citiesService"
    },
    "queue": {
      "declare": true,
      "durable": true,
      "exclusive": false,
      "autoDelete": false
    },
    "context": {
      "enabled": true,
      "header": "message_context"
    }
  },
  "AllowedHosts": "*"
}
