@using WeatherSite.Helpers
@using WeatherSite.Controllers;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        @ViewData["Title"] - Weather Site
    </title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="~/lib/AdminLte/css/google-font-source-sans-pro.css">
    <!-- Font Awesome Icons -->
    <link href="~/lib/fontawesome-5/css/all.css" rel="stylesheet">
    <!-- IonIcons -->
    <link rel="stylesheet" href="~/lib/AdminLte/css/ion-icons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/lib/AdminLte/css/adminlte.min.css">
    @*<script src="~/js/messages.js"></script>*@

    <!-- Select2-->
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css">

    <script src="~/js/base-loader.js" asp-append-version="true"></script>
</head>

<body>
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a class="nav-link"
                       asp-controller="@(MvcHelper.NameOfController<HomeController>())"
                       asp-action="@(nameof(HomeController.Index))">
                        Home
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a class="nav-link"
                       asp-controller="@(MvcHelper.NameOfController<CityController>())"
                       asp-action="@(nameof(CityController.GetCitiesPagination))">
                        Available cities
                    </a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    @*@await Component.InvokeAsync(MvcHelper.NameOfViewComponent<SimpleUserInfoViewComponent>())*@
                </li>

                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-controller="@(MvcHelper.NameOfController<HomeController>())"
               asp-action="@(nameof(HomeController.Index))"
               class="brand-link text-center">
                <span class="brand-text font-weight-light">
                    WeatherSite
                </span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul id="sidebar-menu-first-ul" class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    </ul>
                </nav>
            </div>
        </aside>


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->

            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-12 text-center">
                            <h1 class="m-0">
                                Weather Site
                            </h1>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>

            </div>

        </div>


        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>

        <!-- Main Footer -->
        <footer class="main-footer">
            &copy; 2021 -
            <strong>
                Weather Site
            </strong>- Mirosław Nawrot
            @*<div class="float-right d-none d-sm-inline-block">
                    <small>
                        AdminLTE
                    </small>
                </div>*@
        </footer>
    </div>

    <script src="~/lib/AdminLte/js/jquery.min.js"></script>
    <script src="~/lib/AdminLte/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/AdminLte/js/adminlte.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>